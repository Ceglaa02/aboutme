{% extends 'base.html.twig' %}

{% block body %}
    <h1>Register</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <form method="post" action="{{ path('app_register') }}">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="plainPassword">Password:</label>
            <input type="password" id="plainPassword" name="plainPassword" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="passwordRepeat">Repeat Password:</label>
            <input type="password" id="passwordRepeat" name="passwordRepeat" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    </form>
{% endblock %}
